<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/text_view_bonjour"

            android:layout_centerHorizontal="true"
            android:textSize="@dimen/size_text_medium"
            android:textColor="@color/color_bleuTitre"/>
            <!-- android:text="@string/titre" -->
    <!-- annulation du text view prÃ©nom
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/text_view_prenom"
        android:text="@string/prenom"
        android:layout_toRightOf="@+id/text_view_bonjour"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/size_text"
        android:paddingLeft="5dp"
        android:textColor="@color/color_bleuTitre"/>
     -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:id="@+id/linearLayout_filmsPref"
        android:layout_below="@+id/text_view_bonjour"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/film_prefer"
            android:textSize="22dp"
            android:textColor="#76BFF9"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/linearLayout_filmsPref"
        android:id="@+id/linearLayout_topGun"
        android:orientation="horizontal"
        android:onClick="onClickLinearLayout">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/topgun"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="22dp"
                android:text="@string/film1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date1"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/linearLayout_topGun"
        android:id="@+id/linearLayout_avatar"
        android:orientation="horizontal"
        android:onClick="onClickLinearLayout">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/avatar"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="22dp"
                android:text="@string/film2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date2"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/linearLayout_avatar"
        android:id="@+id/linearLayout_intouchable"
        android:orientation="horizontal"
        android:onClick="onClickLinearLayout">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/intouchables"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="22dp"
                android:text="@string/film3"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date3"
                />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text= "@string/button"
        />




</RelativeLayout>